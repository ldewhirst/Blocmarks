<div class="container">
  <div class="row row-centered">
    <div class="col-md-6 col-md-offset-4">

<h1><%= @topic.title %></h1>

    </div>
  </div>
</div>

<div class="row masonry-container margin">
    <% @topic.bookmarks.each do |bookmark| %>
    <div class="box col-md-4">
      <div class="thumbnail">
          <%= link_to embedly_preview(bookmark), topic_bookmark_path(@topic, bookmark) %>
      <div class="caption">
          <%= link_to bookmark.url, topic_bookmark_path(@topic, bookmark) %>
        </div>
      </div>
  </div>
    <% end %>
</div>

<div class="container">
  <div class="row row-centered">
    <div class="col-md-6 col-md-offset-4">
    <%= link_to "New Bookmark", new_topic_bookmark_path(@topic), class: 'btn btn-success' %>
  <div class="row">
    <div class="col-md-4"></br>
      <% if policy(@topic).edit? %>
        <%= link_to "Edit Topic", edit_topic_path(@topic), class: 'btn btn-success' %>
      <% end %>
    </div>
    <div class="col-md-4"></br>
      <% if policy(@topic).destroy? %>
        <%= link_to "Delete Topic", @topic, method: :delete, class: 'btn btn-danger' %>
      <% end %>
    </div>
  </div>

</div>
</div>
</div>
