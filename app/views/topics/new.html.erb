<div class="container">
  <div class="row row-centered">
    <div class="col-md-6 col-md-offset-3">

      <h1>Create New Topic</h1>

        <%= form_for @topic do |f| %>
          <div class="field">
            <%= f.label :title %>
            <%= f.text_field :title %>
          </div>

          <div class="form-group">
            <%= f.submit "Save", class: 'btn btn-primary' %>
          </div>
        <% end %>

    </div>
  </div>
</div>
