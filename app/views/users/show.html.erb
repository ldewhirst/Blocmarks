<div class="container">
  <div class="row row-centered">
    <div class="col-md-6 col-md-offset-4">
      <h1>My Blocmarks</h1>
    </div>
  </div>
</div>
  <div class="row masonry-container margin">
      <% @user_bookmarks.each do |bookmark| %>
      <div class="box col-md-4">
        <div class="thumbnail">
            <%= link_to embedly_preview(bookmark), [bookmark.topic, bookmark] %>
        <div class="caption">
            <%= link_to bookmark.url, [bookmark.topic, bookmark] %>
          </div>
        </div>
    </div>
      <% end %>
  </div>
<div class="grid-item--width2">
</div>
<div class="container">
  <div class="row row-centered">
    <div class="col-md-6 col-md-offset-4">
      <h1>Liked Blocmarks</h1>
      <div class="row masonry-container margin">
          <% @liked_bookmarks.each do |bookmark| %>
          <div class="box col-md-6">
            <div class="thumbnail">
                <%= link_to embedly_preview(bookmark), [bookmark.topic, bookmark] %>
            <div class="caption">
                <%= link_to bookmark.url, [bookmark.topic, bookmark] %>
            </div>
            <%= render partial: 'likes/like', locals: { bookmark: bookmark } %></br>
            </div>
        </div>
          <% end %>
      </div>

    </div>
  </div>
</div>
