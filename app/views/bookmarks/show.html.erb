<h1><%= @bookmark.url %></h1>

<div class="row">
  <div class="col-md-4">
    <% if policy(@bookmark).edit? %>
      <%= link_to "Edit", edit_topic_bookmark_path(@bookmark.topic, @bookmark), class: 'btn btn-success' %>
    <% end %>
    <% if policy(@bookmark).destroy? %>
      <%= link_to "Delete", [@bookmark.topic, @bookmark], method: :delete, class: 'btn btn-danger',
        data: { confirm: 'Are you sure you want to delete this bookmark?' } %>
    <% end %>
  </div>
</div>
